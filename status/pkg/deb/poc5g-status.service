[Unit]
Description=poc5g-status
After=network.target
StartLimitInterval=60
StartLimitBurst=3

[Service]
Type=simple
ExecStart=/opt/poc5g-status/bin/poc5g-status
User=helium
PIDFile=/var/run/poc5g-status
Restart=always
RestartSec=15
WorkingDirectory=/opt/poc5g-status

[Install]
WantedBy=multi-user.target
